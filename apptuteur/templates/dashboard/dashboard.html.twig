{% extends 'base.html.twig' %}

{% block title %}Tableau de bord
{% endblock %}

{% block body %}
	<div
		class="bg-light min-vh-100">
		{# Navbar supérieure #}
		<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
			<div class="container-fluid">
				<span class="navbar-brand fw-bold">
					Visites Tuteurs
				</span>

				<div class="d-flex align-items-center">
					<span class="text-white me-3">
						{{ tuteur.prenom }}
						{{ tuteur.nom }}
					</span>
					<a href="{{ path('app_logout') }}" class="btn btn-outline-light btn-sm">
						Déconnexion
					</a>
				</div>
			</div>
		</nav>

		<div
			class="container py-4">
			{# Messages flash #}
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label == 'error' ? 'danger' : 'success' }} alert-dismissible fade show" role="alert">
						{{ message }}
						<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Fermer"></button>
					</div>
				{% endfor %}
			{% endfor %}

			<div
				class="row g-4">
				{# Colonne infos tuteur #}
				<div class="col-lg-4">
					<div class="card shadow-sm border-0">
						<div class="card-body">
							<h2 class="h5 mb-3">Tuteur connecté</h2>
							<p class="mb-2">
								<span class="fw-semibold">Nom :</span>
								{{ tuteur.nom }}
								{{ tuteur.prenom }}</p>
							<p class="mb-2">
								<span class="fw-semibold">Email :</span>
								{{ tuteur.email }}</p>
							<p class="mb-0">
								<span class="fw-semibold">Téléphone :</span>
								{{ tuteur.telephone }}</p>
						</div>
					</div>
				</div>

				{# Colonne actions / futur contenu #}
				<div class="col-lg-8">
					<div class="card shadow-sm border-0 mb-3">
						<div class="card-body d-flex justify-content-between align-items-center">
							<div>
								<h2 class="h5 mb-1">Actions rapides</h2>
								<p class="text-muted mb-0" style="font-size: 0.9rem;">
									Gérez vos étudiants et leurs visites.
								</p>
							</div>
<div class="text-end">
	<a href="{{ path('app_etudiant_index') }}" class="btn btn-outline-primary btn-sm me-2">
		Étudiants
	</a>
	{# Bouton Visites désactivé tant que la route n'existe pas #}
	<a href="#" class="btn btn-primary btn-sm disabled">
		Visites
	</a>
</div>


						</div>
					</div>

					<div class="card shadow-sm border-0">
						<div class="card-body">
							<h2 class="h5 mb-3">Prochaines étapes</h2>
							<ul class="mb-0 text-muted" style="font-size: 0.9rem;">
								<li>Afficher la liste des étudiants du tuteur.</li>
								<li>Afficher les prochaines visites planifiées.</li>
								<li>Ajouter des liens vers “Ajouter un étudiant” et “Ajouter une visite”.</li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

